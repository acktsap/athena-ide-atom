{
  "name": "athena-ide-atom",
  "main": "./src/container",
  "version": "0.2.2",
  "description": "A package for writing smart contract in aergo using atom ide",
  "scripts": {
    "postinstall": "npm rebuild --runtime=electron --target=2.0.0",
    "lint": "eslint --fix ./src",
    "test": "npm run lint && mocha --exit --require @babel/register --recursive"
  },
  "repository": "https://github.com/aergoio/athena-ide-atom",
  "keywords": [
    "aergo",
    "smart contract",
    "lua"
  ],
  "author": "aergo team and contributors",
  "bugs": {
    "url": "https://github.com/aergoio/athena-ide-atom/issues"
  },
  "homepage": "https://github.com/aergoio/athena-ide-atom#readme",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "providedServices": {
    "autocomplete.provider": {
      "versions": {
        "2.0.0": "getProvider"
      }
    },
    "linter": {
      "versions": {
        "2.0.0": "getLinter"
      }
    }
  },
  "package-deps": [
    "linter:2.3.0",
    "linter-ui-default:1.7.0"
  ],
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^5.12.0",
    "eslint-plugin-react": "^7.12.4",
    "mocha": "^5.2.0"
  },
  "dependencies": {
    "@aergoio/athena-analysis": "0.0.1",
    "@herajs/client": "^0.5.2",
    "@herajs/crypto": "^0.1.0",
    "atom-package-deps": "^5.0.0",
    "atom-space-pen-views": "^2.2.0",
    "lodash": "^4.17.11",
    "loglevel": "^1.6.1",
    "mobx": "^5.9.0",
    "mobx-react": "^5.4.3",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-select": "^2.4.1",
    "react-tabs": "^3.0.0",
    "reactjs-popup": "^1.3.2"
  }
}
